<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajat.diwalidhamaka.DeleteFragment">


    <Button
        android:id="@+id/but_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091">

        <EditText
            android:id="@+id/edt_del_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product Id to Delete" />
    </android.support.design.widget.TextInputLayout>

    <TableLayout
        android:id="@+id/del_table1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:stretchColumns="0,1,2,3"
        android:visibility="invisible">
        <TableRow>
            <TextView
                android:text="Product Id"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/myborder"/>
            <TextView
                android:text="Name"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/myborder"/>
            <TextView
                android:text="Quantity"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/myborder"/>
            <TextView
                android:text="Price"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/myborder"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/del_id"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"/>
            <TextView
                android:id="@+id/del_name"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"/>
            <TextView
                android:id="@+id/del_qty"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"/>
            <TextView
                android:id="@+id/del_price"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
